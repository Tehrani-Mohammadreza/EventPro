@page "/register"
@inject NavigationManager NavigationManager

<h3>Register</h3>

<EditForm Model="@registrationModel" OnValidSubmit="HandleRegister">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" @bind="registrationModel.Username" required />
    </div>

    <div class="form-group">
        <label for="email">Email</label>
        <input id="email" @bind="registrationModel.Email" required />
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input type="password" id="password" @bind="registrationModel.Password" required />
    </div>

    <button type="submit" class="submit-button">Register</button>
</EditForm>

@code {
    private UserRegistration registrationModel = new UserRegistration();

    private void HandleRegister()
    {
        // Registration logic here (e.g., save to database)
        Console.WriteLine("User Registered: " + registrationModel.Username);
        NavigationManager.NavigateTo("/login");
    }
}
